<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/viewTop"
        android:layout_width="411dp"
        android:layout_height="wrap_content"

        >

        <ImageButton
            android:id="@+id/backFromEditProfile"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/keyboard_backspace"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_top"/>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user"
            android:id="@+id/image_top"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/profile_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTop"
        android:text="@string/my_profile_string"
        />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/keyboard_backspace"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="50dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/reset_password"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="42dp" />

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_margin="@dimen/_20sdp"
        android:hint="@string/first_name_string"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="@dimen/_15sdp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="275dp" />

    <EditText
        android:id="@+id/etLastname"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:hint="@string/last_name_string"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15sdp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="345dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:hint="@string/username_string"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15sdp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="418dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="@string/email_address_string"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15sdp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="491dp" />

    <Button
        android:id="@+id/btEdit"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_blue"
        android:text="@string/update_profile_string"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="583dp" />

    <Button
        android:id="@+id/btDelete"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_red"
        android:text="@string/delete_profile_string"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="643dp" />

</android.support.constraint.ConstraintLayout>